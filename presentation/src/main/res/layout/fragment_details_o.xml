<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.details.DetailsFragment">

    <data>
        <import type="android.view.View" />
        <variable
            name="view"
            type="android.view.View" />
        <variable
            name="viewModel"
            type="com.globant.marvelcharacters.ui.details.DetailsViewModel" />
        <variable
            name="characterDetails"
            type="com.globant.marvelcharacters.model.CharacterDetailsModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{(safeUnbox(viewModel.showLoading) ? view.VISIBLE : view.GONE)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{(safeUnbox(viewModel.showLoading) ? view.GONE : view.VISIBLE)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@{@string/name+characterDetails.name}"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/marvelCharacterImg"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="32dp"
                    android:src="@drawable/android_icon"
                    app:layout_constraintTop_toBottomOf="@+id/textViewName"
                    app:marvelCharacterImage="@{characterDetails.thumbnailUrl}" />

                <TextView
                    android:id="@+id/textDescriptionHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/marvelCharacterImg"  />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@{characterDetails.description}"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textDescriptionHeading" />

                <TextView
                    android:id="@+id/textAvailableComics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@{@string/available_comics+characterDetails.availableComics}"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textDescription" />

                <TextView
                    android:id="@+id/textAvailableSeries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@{@string/available_series+characterDetails.availableSeries}"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/textAvailableComics" />

                <TextView
                    android:id="@+id/textAvailableStories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@{@string/available_stories+characterDetails.availableStories}"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/textAvailableSeries" />

                <TextView
                    android:id="@+id/textAvailableEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@{@string/available_events+characterDetails.availableEvents}"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/textAvailableStories" />

                <TextView
                    android:id="@+id/textComicNamesHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/comic_names"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textAvailableEvents" />

               <!-- <TextView
                    android:id="@+id/textComicNames1"
